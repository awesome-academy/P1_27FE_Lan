mixin blog2(list)
    - var listBlog= list
    - var count = 0
    - var n = 'all'
    each val, key in listBlog
        case n
            when 'all'
                .blog__item
                    .blog__container-img
                        img.blog__img(src= val.img, alt= "img")
                        .blog__hover
                            img(src="../dist/images/icon-link.png", class="blog__hover-img" alt="hover")
                    .blog__content
                        h1.blog__title= val.name
                        .blog__info
                            p.blog__author= val.author
                            p.blog__date= val.date
                            p.blog__comment= val.comment
                        p.blog__description= val.description
                        a.blog__link(href= val.link) Read more
            default
                - if(key < n)
                    - key = count
                        .blog__item
                            .blog__container-img
                                img.blog__img(src= val.img, alt= "img")
                                .blog__hover
                                    img(src="../dist/images/icon-link.png", class="blog__hover-img" alt="hover")
                            .blog__content
                                h1.blog__title= val.name
                                .blog__info
                                    p.blog__author= val.author
                                    p.blog__date= val.date
                                    p.blog__comment= val.comment
                                p.blog__description= val.description
                                a.blog__link(href= val.link) Read more
                - count++



