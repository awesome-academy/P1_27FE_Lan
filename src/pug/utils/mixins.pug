mixin menu(list, ulClass, liClass, dropdown)
    - var menuName= list
    if dropdown== "yes"
        ul(class= ulClass)
            each val, key in menuName
                li(class= liClass)
                    a(href= key)&attributes(attributes)= val
            +dropdownMenu
    else
        ul(class= ulClass)
            each val, key in menuName
                li(class= liClass)
                    a(href= key)&attributes(attributes)= val


